{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ES2022",
      "lib": ["DOM", "ES2022"],
      "sourceMap": true,
      "rootDir": "./src/",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "declaration": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "media"]
  }