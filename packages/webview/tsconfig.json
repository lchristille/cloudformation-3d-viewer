{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ES2022",
      "lib": ["DOM", "ES2022"],
      "sourceMap": true,
      "rootDir": "./src/",
      "outDir": "./dist/",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "declaration": false,
      "jsx": "react-jsx",
      "jsxImportSource": "react"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "dist", "media"]
  }